# abort script on any command that exits with a non zero value
set -e -x

echo "I_AM_HERE"

ls . 1>&2
ls * 1>&2

tar -xzvf nginx/zlib_1.2.11/zlib-1.2.11.tar.gz

tar -xzvf nginx/pcre_8.40/pcre-8.40.tar.gz

tar -xzvf nginx/nginx-1.11.13.tar.gz

pushd nginx-1.11.13
	ls  1>&2
	ls * 1>&2
	pwd 1>&2
	ls ../ 1>&2
	ls ../* 1>&2
	./configure --prefix=${BOSH_INSTALL_TARGET} --with-pcre=../pcre-8.40 --with-zlib=../zlib-1.2.11

	make
	make install
popd
